<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_background">

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_sp"
        android:background="@color/colorWhite"
        android:padding="@dimen/five_dp">


        <ImageView
            android:id="@+id/img_back_enrollment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/enrollment"
            android:textColor="@color/colorDarkBlue"
            android:textSize="@dimen/twenty_dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_info" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_layout"
        android:layout_marginTop="@dimen/thirty_sp"
        android:padding="@dimen/ten">

        <TextView
            android:id="@+id/please_click_on_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="@dimen/eighteen_sp"
            android:text="@string/please_click_on_plus"
            android:textColor="@color/colorWhite"
            android:textSize="22dp"
            android:textStyle="bold" />


        <RelativeLayout
            android:id="@+id/rel_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/please_click_on_plus"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/thirty_sp">

            <ImageView
                android:id="@+id/plus_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_plus_big" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel_plus"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/fifty_sp"
            android:layout_marginTop="@dimen/sixty_dp"
            android:layout_marginRight="@dimen/fifty_sp"
            android:visibility="gone"
            android:background="@drawable/btn_bg">

            <TextView
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="@dimen/five_dp"
                android:text="@string/submit"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/twenty_dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>