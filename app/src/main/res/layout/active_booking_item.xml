<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:paddingVertical="4dp"
        android:background="@drawable/bg_booking_with_boarder">


        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    app:cardCornerRadius="15dp">
                <ImageView
                    android:id="@+id/img_preview"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_room"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginStart="7sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_room_type"
                        style="@style/blackBookingboldSubTitleTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#954785411" />

                    <TextView
                        android:layout_marginTop="2dp"
                        android:id="@+id/txt_feedbackTitle"
                        style="@style/blackBookingTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Santa fe" />

                    <TextView
                        android:layout_marginTop="2dp"
                        android:id="@+id/txt_categoryName"
                        style="@style/blackBookingTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FROM : 22-Aug-2024" />

                    <TextView
                        android:layout_marginTop="2dp"
                        style="@style/blackBookingTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TO : 22-Aug-2024" />

                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 am - 9 pm"
                        android:background="@drawable/bg_booking_nevy_blue"
                        android:paddingHorizontal="8dp"
                        style="@style/feedbackTitleTextStyle"/>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:gravity="end"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/img_chat"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:src="@drawable/right_arrow"
                        app:tint="@color/newLightBlueBaseColor" />
                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
