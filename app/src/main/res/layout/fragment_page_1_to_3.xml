<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".onboarding.Page1To3Fragment">

    <ImageView
        android:id="@+id/imgPageImage"
        android:layout_width="match_parent"
        android:layout_height="350dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginTop="-20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/onboarding_page1_title"
            android:textColor="@color/bg_login_unpress"
            android:textSize="@dimen/twenty_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/fourty_sp"
            android:layout_marginTop="@dimen/fifteen_dp"
            android:layout_marginRight="@dimen/fourty_sp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="@string/onboarding_page1_desc"
            android:textColor="@color/black"
            android:textSize="@dimen/twenty_sp" />



    </LinearLayout>
</LinearLayout>