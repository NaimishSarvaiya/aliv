<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="12dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:clipToPadding="false" />

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tab_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tabBackground="@drawable/broadcast_image_tab_selector"
                        app:tabGravity="center"
                        app:tabIndicatorHeight="0dp"
                        app:tabMaxWidth="12dp"
                        app:tabRippleColor="@null"
                        android:layout_marginTop="-10dp"
                        android:layout_marginBottom="-24dp"
                        app:tabPadding="@dimen/_12dp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_event_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:text="Community Broadcast Event, Indore"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_event_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerVertical="true"
                            android:background="@drawable/celender_new"
                            android:padding="10dp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_event_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@+id/img_event_1"
                            android:text="Monday 22 March 2021"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_event_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:00 AM-8:00 PM"
                            android:layout_toRightOf="@+id/img_event_1"
                            android:layout_below="@id/tv_event_date"
                            android:layout_marginLeft="12dp"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_event_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/pointer_new"
                            android:padding="10dp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:layout_toRightOf="@+id/img_event_2"
                            android:text="Central Park"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_location_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_location"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="0dp"
                            android:layout_toRightOf="@+id/img_event_2"
                            android:text="Indore" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_event_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/user_new"
                            android:padding="10dp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_organizer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IOT Smart"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_toRightOf="@+id/img_event_3"
                            android:layout_marginLeft="12dp"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Organizer"
                            android:layout_toRightOf="@+id/img_event_3"
                            android:layout_below="@id/tv_organizer"
                            android:layout_marginLeft="12dp"/>


                    </RelativeLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_message_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:text="Description"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="4dp"/>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_event_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Lorem ipsum dolor sit amet. Eos omnis similique 33 assumenda soluta et atque necessitatibus in perferendis fugit!"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>