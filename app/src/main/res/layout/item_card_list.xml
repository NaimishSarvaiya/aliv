<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/ten_dp"
    android:background="@drawable/bg_light_blue"
    android:padding="@dimen/ten_dp">

    <TextView
        android:id="@+id/card_user_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/status_lay"
        android:text="User Name"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/card_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_user_tv"
        android:layout_toStartOf="@id/status_lay"
        android:drawablePadding="@dimen/five_dp"
        android:gravity="bottom"
        android:text="Card No"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/status_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Status"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/status_val"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/five_dp"
            android:gravity="center"
            android:text="added"
            android:textColor="@color/green" />
    </LinearLayout>
</RelativeLayout>