<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_background"
    tools:context=".activity.AddProductActivity">

    <RelativeLayout
        android:id="@+id/addproduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imgback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            android:padding="@dimen/ten"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/add_product"
            android:textColor="@color/colorDarkBlue"
            android:textSize="@dimen/eighteen_sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rel_btom"
        android:layout_below="@+id/addproduct">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/ten"
            tools:context=".activity.LoginActivity">

            <RelativeLayout
                android:id="@+id/rel_fields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty_dp"
                android:layout_marginTop="@dimen/twenty_dp"
                android:layout_marginRight="@dimen/twenty_dp">


                <RelativeLayout
                    android:id="@+id/rel_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/edit_back"
                        android:padding="@dimen/twelve_sp"
                        android:text=""
                        android:textColor="@color/colorWhite"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/eighteen_sp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/dropdown"
                        android:backgroundTint="@color/White" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:spinnerMode="dropdown" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_gender"
                    android:layout_marginTop="@dimen/fifteen_dp">

                    <EditText
                        android:id="@+id/edt_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/edit_back"
                        android:hint="@string/product_name"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/twelve_sp"
                        android:singleLine="true"
                        android:textColor="@color/White"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/eighteen_sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rel_email_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_user_name"
                    android:layout_marginTop="@dimen/five_dp">

                    <EditText
                        android:id="@+id/edt_email_log_in"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/ten"
                        android:background="@drawable/edit_back"
                        android:hint="@string/product_price"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/twelve_sp"
                        android:singleLine="true"
                        android:textColor="@color/White"
                        android:textColorHint="@color/gray"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/eighteen_sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_password"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_below="@+id/rel_email_id"
                    android:layout_marginTop="@dimen/ten"
                    android:background="@drawable/edit_back">

                    <EditText
                        android:id="@+id/edt_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten"
                        android:background="@null"
                        android:hint="@string/product_description"
                        android:imeOptions="actionNext"
                        android:paddingStart="@dimen/fifteen_dp"
                        android:paddingLeft="@dimen/fifteen_dp"
                        android:textColor="@color/White"
                        android:textColorHint="@color/gray"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/eighteen_sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_uploadimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_fields"
                android:layout_marginLeft="@dimen/fifteen_dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/upload_images"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/twelve_sp"
                    android:textColor="@color/White"
                    android:textColorHint="@color/gray"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/eighteen_sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/plus_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_uploadimg"
                android:layout_marginLeft="@dimen/twenty_sp"
                android:layout_marginRight="@dimen/twenty_sp"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/uploadimgone"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_plus_big" />

                <ImageView
                    android:id="@+id/uploadimgtwo"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_plus_big" />

                <ImageView
                    android:id="@+id/uploadimgthree"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_plus_big" />
            </LinearLayout>

            <RelativeLayout

                android:id="@+id/rel_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plus_image"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="@dimen/twenty_sp"
                android:layout_marginRight="45dp"
                android:background="@drawable/btn_bg"
                android:padding="@dimen/ten">


                <TextView
                    android:id="@+id/tv_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="@string/submit"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/eighteen_dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>