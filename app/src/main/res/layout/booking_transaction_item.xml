<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:paddingVertical="6dp"
        android:background="@drawable/bg_booking_with_boarder">


        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:gravity="center_vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_room"
                        style="@style/blackBookingboldSubTitleTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meeting Room" />

                    <TextView
                        android:layout_marginTop="2dp"
                        android:id="@+id/tv_date"
                        style="@style/blackBookingTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="28-Sep-2024" />

                </LinearLayout>

            </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$40"
                        android:textSize="17dp"
                        android:textColor="@color/newNavyBuleBaseColor"/>
                    <ImageView
                        android:layout_marginStart="5sp"
                        android:layout_gravity="bottom"
                        android:id="@+id/img_rateStatus"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:focusable="false"
                        android:src="@drawable/ic_flat"
                        android:scaleType="centerCrop"
                        android:focusableInTouchMode="false"/>
                </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
