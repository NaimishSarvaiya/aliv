<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/bg_feedback_sent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/txt_feedbackId"
                    style="@style/feedbackIdTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#954785411" />

                <TextView
                    android:id="@+id/txt_feedbackTitle"
                    style="@style/feedbackTitleTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test" />

                <TextView
                    android:id="@+id/txt_categoryName"
                    style="@style/feedbackDetailsTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test Feedback" />

                <TextView
                    android:id="@+id/txt_feedbackDate"
                    style="@style/feedbackTitleTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="27/08/2024" />


            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_chat"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:visibility="visible"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/img_chat"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:src="@drawable/chat_icon"
                    app:tint="@color/Orange" />
                <TextView
                    android:id="@+id/tv_unReadChat"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:text="" />
                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
