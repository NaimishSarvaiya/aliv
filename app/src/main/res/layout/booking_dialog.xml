<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_booking_with_boarder">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            style="@style/blackTransactionboldSubTitleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Successful!"
            android:textSize="20dp"/>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginVertical="10dp"
            android:alpha="0.6"
            android:layout_marginHorizontal="10dp"
            android:layout_below="@id/tv_title"
            android:background="@color/newNavyBuleBaseColor" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_marginBottom="25dp">

            <RelativeLayout
                android:id="@+id/rl_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp">

                <ImageView
                    android:id="@+id/img_icon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/green_check"
                    app:tint="@color/newLightBlueBaseColor" />

                <TextView
                    android:id="@+id/tv_message"
                    style="@style/blackBookingboldSubTitleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_icon"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:layout_marginTop="20dp"
                    android:textSize="17dp"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:gravity="center"
                    android:text="Your booking was successful! We look forward to your visit." />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_ok"
                android:layout_width="240dp"
                android:layout_height="45dp"
                android:layout_below="@+id/rl_mid"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/bg_booking_nevy_blue">

                <TextView
                    style="@style/whiteBoaldBookingTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/ok"
                    android:textAllCaps="true" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
