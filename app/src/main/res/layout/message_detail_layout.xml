<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:clipToPadding="false" />

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tab_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tabBackground="@drawable/broadcast_image_tab_selector"
                        app:tabGravity="center"
                        app:tabIndicatorHeight="0dp"
                        app:tabMaxWidth="12dp"
                        app:tabRippleColor="@null"
                        android:layout_marginTop="-10dp"
                        android:layout_marginBottom="-24dp"
                        app:tabPadding="@dimen/_12dp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_message_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:text="Ut distinctio illum aut praesentium quia ut voluptas impedit qui mollitia quae est molestiae fuga."
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_message_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Lorem ipsum dolor sit amet. Eos omnis similique 33 assumenda soluta et atque necessitatibus in perferendis fugit! Aut facere odit eos nostrum dolores aut doloremque sunt ut numquam repellendus ut rerum fugit id omnis labore et architecto laboriosam? Cum sapiente mollitia et similique veniam excepturi illo qui delectus quaerat a magni ipsum 33 dolore voluptas a ipsum laborum."
                        android:textColor="#757575"
                        android:textSize="16sp" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_message_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monday 22 March 2021, 03:00 PM"
                        android:textColor="#005A8C"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>