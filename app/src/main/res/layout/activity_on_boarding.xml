<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/relBottomContainer" />


    <RelativeLayout
        android:id="@+id/relBottomContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <View
            android:id="@+id/Viewline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/White" />

        <TextView
            android:id="@+id/tv_tap_here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/tap_here"
            android:textColor="@color/orange_text_heading"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/Viewline"
            android:layout_marginBottom="@dimen/_12dp"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tap_here"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_12dp"
            app:tabBackground="@drawable/auto_slide_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            app:tabMaxWidth="12dp"
            app:tabRippleColor="@null" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tab_layout">

            <Button
                android:id="@+id/btn_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fourty_sp"
                android:layout_marginRight="@dimen/fourty_sp"
                android:layout_marginBottom="@dimen/twelve_sp"
                android:background="@drawable/green_bg"
                android:textAllCaps="false"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_32dp"
                android:paddingTop="@dimen/twenty_dp"
                android:paddingBottom="@dimen/twenty_dp"
                android:text="@string/skip"
                android:textColor="@color/white"
                android:textSize="@dimen/twenty_sp"
                android:visibility="gone" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                app:tabBackground="@drawable/onboarding_page_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp"
                app:tabMaxWidth="@dimen/_12dp"
                app:tabRippleColor="@null" />


            <ImageView
                android:id="@+id/imgNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/twenty_sp"
                android:background="@drawable/onboarding_next_button_bg"
                android:padding="@dimen/_12dp"
                android:src="@drawable/next_24dp"
                android:visibility="gone" />


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>