<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <solid android:color="#1c1c1c"/> <!-- Color when pressed -->
            <corners android:radius="0dp"/> <!-- Optional: if you want rounded corners -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent"/> <!-- Default color -->
            <corners android:radius="0dp"/> <!-- Optional: if you want rounded corners -->
        </shape>
    </item>
</selector>